@model IEnumerable<llantasAPP.Models.edicionLlantas.llantasInventario>

@{
    ViewBag.Title = "Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="padding: 0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item" aria-current="page">Inventario de llantas</li>
        </ol>
    </nav>

    @*<h4>Inventario de Llantas</h4>*@
    <script type="text/javascript">
        $(function () {
            $("#table_id").DataTable({
                "scrollY": "30rem",
                "scrollCollapse": true
            });
        });
    </script>
    <table id="table_id" class=" table display" style="font-size: small;">
        <thead>
            <tr>
                <th>
                    Nro. Llanta
                </th>
                <th>
                    Grupo
                </th>
                <th>
                    Inventario
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Proveedor
                </th>
                <th>
                    Nro. Factura
                </th>
                <th>
                    Nro. Ficha
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LLANTA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GRUPO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.INVENT)
                    </td>
                    <td>
                        <span class="money">@Html.DisplayFor(modelItem => item.VALOR)</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FECHA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PROVE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FACTURA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FICHA)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        $('.money').formatCurrency('.money');
    </script>
    <span class="timeTransac">Tiempo de transacción: @ViewBag.tiempoProceso Segundos</span>
</div>
