@* formulario *@
<div class="col">
    <div id="cont_editLlantas" class="row">
        <div id="cajacontrolesizq" class="col-sm-12 col-md-2 col-lg-2">

            <form id="formBuscarPlaca">
                <fieldset id="controlform">
                    <legend><span class="tituloform">Buscar Placa</span></legend>
                    <div class="form-row">
                        <div class="form-group col-8 ">
                            <input type="text" class="form-control text-uppercase" id="inputsplaca" name="placa" placeholder="PLACA" maxlength="6" required="required">
                            <input type="number" class="form-control text-uppercase" id="inputskm" name="km" placeholder="KM" required="required">
                        </div>
                        <div class="form-group col-4">
                            <button id="cargarplaca" type="submit" class="btn btn-success btn-sm">
                                <img src="~/Content/medios/search.svg" />
                            </button>
                        </div>
                    </div>
                </fieldset>
            </form>
            <form>
                <fieldset id="dtllTrabajoactual" class="visible">
                    <legend><span class="tituloform">Trabajo Actual</span></legend>
                    <dl class="row">
                        <dt class="col"><strong>Placa </strong></dt>
                        <dd class="col"><span id="tActual" class="badge badge-secondary">N/A</span></dd>
                        <dt class="col"><strong>Kilometraje </strong></dt>
                        <dd class="col"><span id="kmActual"></span></dd>
                        <dt class="col"><strong>Fecha </strong></dt>
                        <dd class="col"><span id="dateActual"></span></dd>
                    </dl>
                </fieldset>
                <span id="lblMresultados" class="badge badge-warning visible">Sin resultados!</span>
            </form>
            <button id="bntGuardar" type="button" class="btn btn-success btn-lg btn-block" disabled>Guardar</button>
        </div>
        <div id="cajacontrolcent" class="col visible">
            <div id="camion" class="row">
                @*Epacio para las llantas *@
            </div>
        </div>
        <div id="cajacontrolesderc" class="col-sm-3 col-md-2 col-lg-2 cajacontrolesder visible">
            <div class="contAddllantas">
                <form id="formAddLlanta">
                    <fieldset>
                        <legend>Montar llantas</legend>
                        <div class="form-row">
                            <div class="form-group col-8">
                                <input type="text" class="form-control text-uppercase" id="inputnllanta" name="nllanta" placeholder="LLANTA" required="required">
                            </div>
                            <div class="form-group col-4">
                                <button id="addllanta" type="submit" class="btn btn-success">
                                    <img src="~/Content/medios/plus.svg" /></button>
                            </div>
                        </div>
                    </fieldset>

                </form>
                <div id="nuevallanta">
                </div>
            </div>
            <div class="contBasura">
                <form>
                    <fieldset>
                        <legend>Remover Llanta</legend>

                    </fieldset>
                    <div class="clas caneca">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
